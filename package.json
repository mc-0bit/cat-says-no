        "build:firefox": "wxt build -b firefox",
        "zip": "wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "postinstall": "wxt prepare",
        "install:chrome": "tsx scripts/install-chrome.ts",
        "serve": "npx http-server --base-dir ./dist",
        "bundle:plugin": "tsx scripts/export-plugin.ts",
        "bundle:linkedom": "tsx scripts/export-linkedom/index.ts",
        "generate:keypair": "tsx scripts/generate-keypair.ts",
        "format": "prettier --write ./src ./scripts ./plugins",
        "lint": "prettier --check ./src ./scripts ./plugins && eslint ./src ./scripts ./plugins",
        "lint:prettier": "prettier --check ./src ./scripts ./plugins",
        "lint:eslint": "eslint ./src ./scripts ./plugins",
        "lint:fix": "npm run format && eslint --fix ./src ./scripts ./plugins"
    },
