{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"],
            "~": ["./src"],
            "~/*": ["./src/*"],
            "@@": ["."],
            "@@/*": ["./*"],
            "~~": ["."],
            "~~/*": ["./*"]
        },
        "useDefineForClassFields": true
    },
    "include": ["**/search-plugin.ts", "./wxt.d.ts"],
    "exclude": ["../.output"]
}
